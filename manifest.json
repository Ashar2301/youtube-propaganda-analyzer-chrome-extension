{
  "manifest_version": 3,
  "name": "YouTube Propaganda Analyzer",
  "description": "AI tool to expose propaganda and bias in YouTube content.",
  "version": "0.1.2",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*", "https://carlos-anime-yearly-galleries.trycloudflare.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "YouTube Propaganda Analyzer"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/YTPA_48.svg",
    "128": "icons/YTPA_128.svg"
  },
  "backend_config": {
    "apiUrl": "https://carlos-anime-yearly-galleries.trycloudflare.com/analyze"
  }
}
